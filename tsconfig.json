{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["DOM", "ES2019"],
        "jsx": "react-jsx",
        "jsxImportSource": "@/app/lib/vdom/",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/app/lib/vdom", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}