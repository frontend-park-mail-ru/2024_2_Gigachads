<div class="email-container">
    <div class="email-container__utility-bar">
        <div class="email-container__utility-bar-buttons button" data-action="reply">
            <div class="icon">
                <img src="/icons/reply.svg" alt="Ответить">
            </div>
            <div class="email-container__button">Ответить</div>
        </div>
        <div class="email-container__utility-bar-buttons button" data-action="forward">
            <div class="icon">
                <img src="/icons/forward.svg" alt="Переслать">
            </div>
            <div class="email-container__button">Переслать</div>
        </div>
